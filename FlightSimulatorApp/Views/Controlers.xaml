<UserControl x:Class="FlightSimulatorApp.Views.Controlers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="10,25,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:Joystick Grid.Column="1" Grid.Row="0"></local:Joystick>
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
            <Slider x:Name="RectangleHeigh"  Margin="0,29,0,0" 
              Width="97" Orientation="Vertical" VerticalAlignment="Top"
              Value="50" Minimum="0" Maximum="200" 
              SmallChange="1" LargeChange="10"
              TickPlacement="BottomRight" TickFrequency="10" RenderTransformOrigin="0.485,7.271" Height="321"/>
            <Rectangle Fill="Blue" HorizontalAlignment="Left" 
               Margin="50,20,0,0" 
               Height="{Binding Value, ElementName=RectangleHeight}" 
               Width="{Binding Value, ElementName=RectangleWidth}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Slider x:Name="RectangleHeight"  Margin="30,88,295,87" 
              Width="414" Orientation="Horizontal" HorizontalAlignment="Stretch" 
              Value="50" Minimum="0" Maximum="200" 
              SmallChange="1" LargeChange="10"
              TickPlacement="BottomRight" TickFrequency="10" RenderTransformOrigin="0.485,7.271" Height="25"/>
            <Rectangle Fill="Blue" HorizontalAlignment="Left" 
               Margin="50,20,0,0" 
               Height="{Binding Value, ElementName=RectangleHeight}" 
               Width="{Binding Value, ElementName=RectangleWidth}"/>
        </StackPanel>
    </Grid>
</UserControl>
