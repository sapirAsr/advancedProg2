<Page x:Class="FlightSimulatorApp.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulatorApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
      Title="Dashboard">

    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
          
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />

        </Grid.RowDefinitions>

        <Label VerticalAlignment="Center" Foreground="White" Height="26" Margin="0,0,0.333,0">Dashboard</Label>
        <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Foreground="White" Height="26" Margin="0,0,0.333,0">Indicators:</Label>

        <ListBox Name="indicators" Grid.Column="0" Grid.Row="2" Margin="0,0,10.333,173">
            <ListBoxItem>Heading-deg</ListBoxItem>
            <ListBoxItem>Gps-vertical-speed</ListBoxItem>
            <ListBoxItem>Gps-ground-speed</ListBoxItem>
            <ListBoxItem>Airspeed</ListBoxItem>
            <ListBoxItem>Gps-altitude</ListBoxItem>
            <ListBoxItem>Roll</ListBoxItem>
            <ListBoxItem>Pitch</ListBoxItem>
            <ListBoxItem>Altimeter</ListBoxItem>
        </ListBox>


    </Grid>
</Page>
